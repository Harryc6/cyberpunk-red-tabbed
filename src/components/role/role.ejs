              <option value="@{skill_seavehicletech}">Sea Vehicle Tech</option>
              <option value="@{skill_weaponstech}">Weaponstech</option>
            </select>
          </div>
        </div>
        <div class="column">
          <div class="columns">
            <div class="column column-3">
              <button
