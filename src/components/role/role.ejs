  <div class="role-pane role-solo">
    <h4 class="clipped-corner">Solo</h4>
    <div class="role-ability">
      Solo role ability: Combat Awareness
      <input type="number" name="attr_role_solo" />
      <div class="rulebook-reference">See full rules on p.146</div>
    </div>
    <div class="subdivider">
      <div class="columns">
        <div class="column center">
          Damage Deflection
          <input type="number" name="attr_role_solo_damagedeflection" />
        </div>
        <div class="column center">
          Fumble Recovery
          <input type="number" name="attr_role_solo_fumblerecovery" />
        </div>
        <div class="column center">
          Initiative Reaction
          <input type="number" name="attr_role_solo_initiativereaction" />
        </div>
        <div class="column center">
          Precision Attack
          <input type="number" name="attr_role_solo_precisionattack" />
        </div>
        <div class="column center">
          Spot Weakness
          <input type="number" name="attr_role_solo_spotweakness" />
        </div>
        <div class="column center">
          Threat Detection
          <input type="number" name="attr_role_solo_threatdetection" />
        </div>
      </div>
    </div>
  </div>
